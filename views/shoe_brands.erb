<% if @brands.any? %>
<h1>Here is a list of all of the Brands</h1>
<ul>
  <% @brands.each() do |brand| %>
  <li><a href="/brands/<%=brand.id()%>"><%=brand.description%></a></li>
  <% end %>
</ul>
<% else %>
  <h1>The Brands Database is currently empty.</h1>
<% end %>

<hr>
<hr>
<hr>

<h1>Create a shoe Brand </h1>
<form action="/brands" method="post">
  <div class="form-group">
    <label class="form-label" for="name">Add a Shoe Brand</label>
    <input class="form-control" id="name" type="text" name="name" required placeholder="Enter Store Name Here"> <br>
    <button type="submit" class=" btn">Submit!</button>
  </div>
</form>

